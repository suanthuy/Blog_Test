<div class="mt-4">
    <h3>Create new course</h3>
    <form method="POST" action="/courses/store">

        <div class="mb-3">
            <label for="name" class="form-label">Course's name</label>
            <input type="text" class="form-control" id="name" name="name" />
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <input
                type="text"
                class="form-control"
                id="description"
                name="description"
            />
        </div>

        <div class="mb-3">
            <label for="videoid" class="form-label">Video ID</label>
            <input
                type="text"
                class="form-control"
                id="videoid"
                name="videoid"
            />
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>